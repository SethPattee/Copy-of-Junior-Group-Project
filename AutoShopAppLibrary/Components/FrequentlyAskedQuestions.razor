<div class="faq-container">
    <img src="./workshop-bg2.jpg" class="faq-background-image" />
    <div class="faqbox">
        <h3 class="FAQ-header">Frequently Asked Questions</h3>
        <dl>
            @foreach(string s in FrequentQuestions)
            {
                @if (s.Contains('?'))
                {
                    <dt class="Question">@s</dt>
                }
                else
                {
                    <dd class="Answer">@s</dd>
                }
            }
        </dl>
    </div>
</div>

@code {
