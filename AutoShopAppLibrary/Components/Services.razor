    <script>
        $(document).ready(function () {
            $('.btn-primary').click(function () {
                // Check if the clicked button is outside of the navbar
                if (!$(this).closest('.navbar').not('.serv-item-button').length) {
                    $($(this).data('target')).toggleClass('show');
                }
            });
        });

    </script>
