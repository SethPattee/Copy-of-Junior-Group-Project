@page "/frequently-asked-questions"
<AutoShopAppLibrary.Components.FrequentlyAskedQuestions></AutoShopAppLibrary.Components.FrequentlyAskedQuestions>

<style>
    /* Reset default margin and padding */
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

/* Body styles */
body {
    font-family: Arial, sans-serif;
    background-color: none; /* Background color */
}

/* FAQ container */
.faq-container {
    position: relative;
    width: 100%;
    /* max-width: 500px; /* Adjust according to your design */ */
    margin: 20px auto;
    padding: 20px;
    background-color: none;
    border-radius: 10px;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
}

/* Background image */
.faq-background-image {
    position: absolute;
    top: 0px;
    left: 0px;
    width: 100%;
    height: 100%;
    object-fit: cover;
    z-index: -1;
}

/* FAQ box */
.faqbox {
    padding: 20px;
}

/* FAQ header */
.FAQ-header {
    font-size: 24px;
    margin-bottom: 20px;
}

/* Question */
.Question {
    font-weight: bold;
    z-index:5;
}

/* Answer */
.Answer {
    margin-bottom: 20px;
    line-height: 1.4;
    border-bottom: 2px solid rgba(160, 160, 160, 0.4); 
}


</style>